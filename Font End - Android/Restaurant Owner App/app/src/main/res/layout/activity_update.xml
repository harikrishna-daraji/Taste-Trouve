<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signupfinal"
    android:padding="20dp"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primaryteal"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:text="SignUp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_height="match_parent">

        <EditText
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:id="@+id/nameupdate"
            android:paddingLeft="20dp"
            android:height="35dp"
            android:background="@drawable/textfieldbackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Restaurant Name"/>

        <EditText
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:id="@+id/emailupdate"
            android:paddingLeft="20dp"
            android:height="35dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/textfieldbackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"/>


        <EditText
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:id="@+id/phoneupdate"
            android:layout_marginTop="30dp"
            android:paddingLeft="20dp"
            android:background="@drawable/textfieldbackground"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="Phone"/>
        <EditText
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:id="@+id/addressupdate"
            android:layout_marginTop="30dp"
            android:paddingLeft="20dp"
            android:background="@drawable/textfieldbackground"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="Address"/>

        <EditText
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:id="@+id/passwordupdate"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/textfieldbackground"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="Password"/>




        <Button
            android:id="@+id/update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="50dp"
            android:backgroundTint="#FF9800"
            android:text="Update"/>

    </LinearLayout>
</LinearLayout>