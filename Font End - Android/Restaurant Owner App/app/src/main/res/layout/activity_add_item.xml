<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="20dp"
    android:orientation="vertical"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".Activity.AddItem"
    >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#0D164D"
            android:layout_marginTop="10dp"
            android:textSize="24dp"
                android:text="Add Product"/>

        <ImageView
            android:id="@+id/imgView"
            android:layout_width="80dp"
            android:layout_gravity="center"
            android:layout_height="80dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/imageplaceholder"/>


        <Spinner
            android:id="@+id/categorySpinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/spinnerbackground"
            android:layout_marginTop="20dp"
            />

        <Spinner
            android:id="@+id/subCategorySpinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/spinnerbackground"
            android:layout_marginTop="15dp"
            />


        <com.google.android.material.textfield.TextInputLayout
            android:textColorHint="@color/black"
            app:startIconTint="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:startIconDrawable="@drawable/ic_baseline_supervised_user_circle_24"
            android:hint="Name"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:background="@drawable/tealtextbackground"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:textColorHint="@color/black"
            app:startIconTint="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:startIconDrawable="@drawable/ic_baseline_attach_money_24"
            android:layout_marginTop="15dp"
            android:hint="Price"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:background="@drawable/tealtextbackground"
                    android:layout_height="wrap_content"
                    />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:textColorHint="@color/black"
            app:startIconTint="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Description"
            app:startIconDrawable="@drawable/ic_baseline_no_food_24"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:background="@drawable/tealtextbackground"
                    android:layout_height="wrap_content"
                    />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:textColorHint="@color/black"
            app:startIconTint="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Calories"
            app:startIconDrawable="@drawable/ic_baseline_bolt_24"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/calories"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:background="@drawable/tealtextbackground"
                    android:layout_height="wrap_content"
                    />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:textColorHint="@color/black"
            app:startIconTint="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:startIconDrawable="@drawable/ic_baseline_production_quantity_limits_24"
            android:hint="Quantity"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/quantity"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:background="@drawable/tealtextbackground"
                    android:layout_height="wrap_content"
                    />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:textColorHint="@color/black"
            app:startIconTint="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:startIconDrawable="@drawable/ic_baseline_lock_clock_24"
            android:hint="Delivery Time"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/deliveryTime"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:background="@drawable/tealtextbackground"
                    android:layout_height="wrap_content"
                    />

        </com.google.android.material.textfield.TextInputLayout>

        <CheckBox
            android:textColor="@color/black"
            android:id="@+id/kidSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/add_to_kid_section"
           />

        <CheckBox
            android:id="@+id/popularItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:text="@string/add_to_popular_section"
           />
        <Button
            android:id="@+id/addProduct"
            android:layout_width="match_parent"
            android:backgroundTint="#0D164D"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
                android:text="@string/add_item"/>

</LinearLayout>
</ScrollView>