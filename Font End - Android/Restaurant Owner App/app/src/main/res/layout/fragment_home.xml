<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/homescreen"
    android:layout_height="match_parent"
    tools:context=".Fragment.HomeFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="20dp"

        android:background="@drawable/roundhomebar"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/man"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="16dp"
            android:text="Welcome Owner"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">
<LinearLayout
    android:id="@+id/createItem"
    android:layout_width="150dp"
    android:background="@drawable/roundblue"
  android:gravity="center"
    android:orientation="vertical"
    android:layout_height="130dp">
<ImageView
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:src="@drawable/ic_baseline_settings_24"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:text="@string/create_item"/>
</LinearLayout>

        <LinearLayout
            android:id="@+id/viewItems"
    android:layout_width="150dp"
            android:layout_marginLeft="40dp"
    android:background="@drawable/roundblue"
  android:gravity="center"
    android:orientation="vertical"
    android:layout_height="130dp">
<ImageView
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:src="@drawable/ic_baseline_remove_red_eye_24"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:text="@string/view_items"/>
</LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/pendingOrder"
            android:layout_width="150dp"
            android:background="@drawable/roundorange"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="130dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_no_food_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:textColor="#ffffff"
                android:text="@string/pending_orders"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/roundorange"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="130dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_celebration_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:textColor="#ffffff"
                android:text="@string/accepted_orders"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/viewOrder"
            android:layout_width="150dp"
            android:background="@drawable/roundteal"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="130dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_auto_graph_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:textColor="#ffffff"
                android:text="Report"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/avaliableDrivers"
            android:layout_width="150dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/roundteal"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="130dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_no_food_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:textColor="#ffffff"
                android:text="@string/available_driver"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
