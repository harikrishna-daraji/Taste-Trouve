<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signupfinal"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".LogInActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primaryteal"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:text="SignUp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_height="match_parent">

    <EditText
        android:id="@+id/adminname"
        android:paddingLeft="20dp"
        android:height="35dp"
        android:background="@drawable/textfieldbackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Restaurant Name"/>

    <EditText
        android:id="@+id/adminEmail"
        android:paddingLeft="20dp"
        android:height="35dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/textfieldbackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"/>


    <EditText
        android:id="@+id/adminPhone"
        android:layout_marginTop="30dp"
        android:paddingLeft="20dp"
        android:background="@drawable/textfieldbackground"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:hint="Phone"/>
    <EditText
        android:id="@+id/adminAddress"
        android:layout_marginTop="30dp"
        android:paddingLeft="20dp"
        android:background="@drawable/textfieldbackground"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:hint="Address"/>

    <EditText
        android:id="@+id/adminPassword"
        android:paddingLeft="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/textfieldbackground"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:hint="Password"/>




    <Button
        android:id="@+id/signUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="50dp"
        android:backgroundTint="#FF9800"
        android:text="SignUp"/>

        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:text="Already have account? Log In Now"/>
    </LinearLayout>
</LinearLayout>