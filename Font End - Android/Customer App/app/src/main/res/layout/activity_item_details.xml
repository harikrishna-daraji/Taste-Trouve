<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="?attr/backgroundColor"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.ItemDetailsActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/itemImg"
            android:layout_marginTop="-10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/dishe"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="-70dp"
            android:layout_marginBottom="-500dp"
            app:cardCornerRadius="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:background="?attr/backgroundColor"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:background="?attr/backgroundColor"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="50dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="0.4"
                            android:textSize="20sp"
                            android:id="@+id/itemNameTV"
                            android:textColor="?attr/textColor"
                            android:text="@string/item_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/quantityTV"
                            android:text="@string/quantity"
                            android:textColor="?attr/textColor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <TextView
                            android:layout_gravity="center"
                            android:layout_weight="0.3"
                            android:text="@string/price_digit"
                            android:id="@+id/kidPriceTV"
                            android:textSize="17dp"
                            android:textColor="@color/red"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <androidx.cardview.widget.CardView
                            android:layout_gravity="center"
                            android:layout_marginEnd="10dp"
                            android:id="@+id/minusCardView"
                            app:cardBackgroundColor="@color/grayish"
                            android:layout_width="35dp"
                            android:layout_height="35dp">
                            <ImageView
                                android:layout_gravity="center"
                                android:src="@drawable/minus_icon"
                                android:layout_width="20dp"
                                android:layout_height="20dp"/>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:id="@+id/adjustableQuantTV"
                            android:layout_marginEnd="10dp"
                            android:layout_gravity="center"
                            android:text="@string/quantity_digit"
                            android:textColor="?attr/textColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/addCardView"
                            android:layout_marginEnd="10dp"
                            android:layout_gravity="center"
                            app:cardBackgroundColor="@color/grayish"
                            android:layout_width="35dp"
                            android:layout_height="35dp">
                            <ImageView
                                android:layout_gravity="center"
                                android:src="@drawable/add_icon"
                                android:layout_width="20dp"
                                android:layout_height="20dp"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_centerInParent="true"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:src="@drawable/delievery_icon"
                                    app:tint="@color/red"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"/>
                                <TextView
                                    android:id="@+id/deliveryTV"
                                    android:layout_marginStart="5dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:text="@string/delivery_time"
                                    android:textColor="?attr/textColor"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_centerInParent="true"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_gravity="center"
                                    android:src="@drawable/calorie_icon"
                                    app:tint="@color/red"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"/>
                                <TextView
                                    android:id="@+id/calorieTV"
                                    android:layout_marginStart="5dp"
                                    android:layout_gravity="center"
                                    android:text="@string/calorie_digit"
                                    android:textColor="?attr/textColor"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </RelativeLayout>

                    </LinearLayout>


                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp">
                        <RelativeLayout
                            android:id="@+id/favourite"
                            android:background="@color/red"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="15dp"
                                android:id="@+id/favText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="Remove from Favourites"
                                android:textColor="@color/white" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/descriptionTV"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="680dp"
                        android:layout_marginStart="5dp"
                        android:layout_gravity="center"
                        android:text="@string/random_text"
                        android:textColor="?attr/textColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </ScrollView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/addToCartLinear"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/white_background_outlined_xml"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/add_to_cart"
            android:textColor="?attr/textColor"
            android:textSize="18sp" />
    </RelativeLayout>

    
</RelativeLayout>