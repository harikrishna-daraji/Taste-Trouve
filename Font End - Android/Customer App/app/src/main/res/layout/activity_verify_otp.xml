<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="?attr/backgroundColor"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.VerifyOtpActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/verification"
        android:textColor="?attr/textColor"
        android:layout_marginTop="100dp"
        android:textSize="60dp"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        />
    <TextView
        android:textColor="?attr/textColor"
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/sent_otp_text"
        android:textAlignment="center"
         />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/editTextOtp1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="72dp"
            android:imeOptions="actionNext"
            android:textAlignment="center"
            android:maxLength="1"
            android:ems="10"
            android:inputType="number"
            android:textColor="?attr/textColor"
            />
        <EditText
            android:id="@+id/editTextOtp2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:imeOptions="actionNext"
            android:maxLength="1"
            android:layout_marginTop="72dp"
            android:textAlignment="center"
            android:ems="10"
            android:inputType="number"
            android:textColor="?attr/textColor"
            />
        <EditText
            android:id="@+id/editTextOtp3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:imeOptions="actionNext"
            android:maxLength="1"
            android:textAlignment="center"
            android:layout_marginTop="72dp"
            android:ems="10"
            android:inputType="number"
            android:textColor="?attr/textColor"
            />
        <EditText
            android:id="@+id/editTextOtp4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:imeOptions="actionNext"
            android:textAlignment="center"
            android:maxLength="1"
            android:layout_marginTop="72dp"
            android:ems="10"
            android:inputType="number"
            android:textColor="?attr/textColor"
            />
        <EditText
            android:id="@+id/editTextOtp5"
            android:layout_width="50dp"
            android:textAlignment="center"
            android:imeOptions="actionNext"
            android:maxLength="1"
            android:layout_height="50dp"
            android:layout_marginTop="72dp"
            android:ems="10"
            android:inputType="number"
            android:textColor="?attr/textColor"
            />
        <EditText
            android:id="@+id/editTextOtp6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:imeOptions="actionNext"
            android:textAlignment="center"
            android:maxLength="1"
            android:layout_marginTop="72dp"
            android:ems="10"
            android:inputType="number"
            android:textColor="?attr/textColor"
            />

    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButtonVerify"
        android:layout_width="293dp"
        android:layout_height="64dp"
        android:layout_marginTop="56dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/send" />
</LinearLayout>
</LinearLayout>